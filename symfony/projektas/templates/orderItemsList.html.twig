{% extends "base.html.twig" %}
{% block body %}
	<div class = "mainScreen">
		<h1><a href = "{{ path('warehouse') }}"><</a> Užsakymo daiktų sąrašas </a> </h1> <br />
		<table style="width:100%">
			<tr>
				<th>Pavadinimas</th>
				<th>Likutis</th>
				<th>Galiojimo data</th>
			</tr>
            {% for item in items %}
				<tr>
					<td>{{ item.getName() }}</td>
					<td>{{ item.getAmount() }}</td>
					<td>{{ item.getExpirationDate()|date('Y-m-d H:i:s') }}</td>
				</tr>
            {% endfor %}
		</table>
	</div>
{% endblock %}