{% extends "base.html.twig" %}
{% block body %}
	<div class = "mainScreen">
		<h1><a href = "{{ path('mainMenu') }}"><</a> Viešbučio darbuotojai <a href = "{{ path('addEmployeeScreen') }}">+</a> </h1> <br />
		<table style="width:100%">
			<tr>
				<th>ID</th>
				<th>Vardas</th>
				<th>Pavardė</th>
				<th>Ištrinti</th>
				<th>Redaguoti</th>
			</tr>
			{% for employee in employees %}
			<tr>
				<td>{{ employee.getId() }}</td>
				<td>{{ employee.getName() }}</td>
				<td>{{ employee.getSurname() }}</td>
				<td><a href = "/deleteEmployee/{{ employee.getId() }}"}}>X</a></td>
				<td><a href = "/editEmployee/{{ employee.getId() }}"}}>E</a></td>
			</tr>
			{% endfor %}
		</table> 
	</div>
{% endblock %}