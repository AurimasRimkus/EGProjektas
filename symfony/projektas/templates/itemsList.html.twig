{% extends "base.html.twig" %}
{% block body %}
	<div class = "mainScreen">
		<h1><a href = "{{ path('warehouse') }}"><</a> Daiktų sąrašas <a href = "{{ path('addItem') }}">+</a> </h1> <br />
		<table style="width:100%">
			<tr>
				<th>Pavadinimas</th>
				<th>Likutis</th>
				<th>Galiojimo data</th>
				<th>Ištrinti</th>
				<th>Redaguoti</th>
				<th>Panaudoti užsakymui</th>
				<th>Nurašyti</th>
			</tr>
            {% for item in items %}
				<tr>
					<td>{{ item.getName() }}</td>
					<td>{{ item.getAmount() }}</td>
					<td>{{ item.getExpirationDate()|date('Y-m-d H:i:s') }}</td>
					<td><a href = "/deleteItem/{{ item.getId() }}"}}>X</a></td>
					<td><a href = "/editItem/{{ item.getId() }}"}}>E</a></td>
					<td><a href = "/useForOrder/{{ item.getId() }}"}}>E</a></td>
					<td><a href = "/removeItem/{{ item.getId() }}"}}>N</a></td>
				</tr>
            {% endfor %}
		</table>
	</div>
{% endblock %}